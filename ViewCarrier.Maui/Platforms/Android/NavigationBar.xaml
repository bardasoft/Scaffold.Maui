<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:local="clr-namespace:Scaffold.Maui.Platforms.Android"
      xmlns:sam="clr-namespace:ButtonSam.Maui;assembly=ButtonSam.Maui"
      xmlns:internal="clr-namespace:Scaffold.Maui.Internal"
      xmlns:scaffold="clr-namespace:Scaffold.Maui"
      x:Class="Scaffold.Maui.Platforms.Android.NavigationBar"
      x:DataType="local:NavigationBar"
      BackgroundColor="{AppThemeBinding Dark=#171717, Light=#ee1d23}"
      HeightRequest="54">
    
    <Grid.Resources>
        <DataTemplate x:Key="titleTemplate">
            <Label FontSize="22"
                   Margin="13,0,0,0"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand"
                   LineBreakMode="TailTruncation"
                   TextColor="White"/>
        </DataTemplate>

        <DataTemplate x:Key="menuTemplate"
                      x:DataType="scaffold:MenuItem">
            <internal:ButtonMenu VerticalOptions="Center"
                                 Text="{Binding Text}"
                                 TapColor="#DDFFFfFF"
                                 ImageColor="White"
                                 ImageSource="{Binding ImageSource}"
                                 TapCommand="{Binding Command}"/>
        </DataTemplate>
    </Grid.Resources>
    
    <StackLayout Orientation="Horizontal"
                 Spacing="0">
        <!--back button-->
        <sam:Button BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Margin="10,0,0,0"
                    CornerRadius="20"
                    Padding="8"
                    TapColor="{AppThemeBinding Light=#DFFF, Dark=#DFFF}"
                    x:Name="backButton">
            <internal:ImageTint Source="ic_arrow_left.png"
                                TintColor="#FFF"/>
        </sam:Button>

        <Grid x:Name="gridTitles"
              HorizontalOptions="FillAndExpand">
        </Grid>

        <Grid x:Name="gridMenu">
        </Grid>
    </StackLayout>
</Grid>
