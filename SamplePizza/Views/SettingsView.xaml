<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SamplePizza.Controls"
             xmlns:scaffold="clr-namespace:ScaffoldLib.Maui;assembly=Scaffold.Maui"
             xmlns:vm="clr-namespace:SamplePizza.ViewModels"
             x:Class="SamplePizza.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             Padding="10"
             scaffold:Scaffold.Title="Settings">
    <StackLayout Spacing="10">
        <Label Text="App theme" />
        <controls:ElementPicker HorizontalOptions="FillAndExpand"
                                ItemsSource="{Binding AppThemes}"
                                Placeholder="App theme"
                                SelectedItem="{Binding SelectedTheme}" />
    </StackLayout>
</ContentView>
